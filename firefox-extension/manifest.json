{
  "manifest_version": 3,
  "name": "All-in-One Custom Search",
  "version": "2.0",
  "description": "Allows you to switch your default search engine (Startpage, DuckDuckGo, Brave, PrivacyWall) via a simple dashboard.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Select Search Engine",
    "default_popup": "popup/dashboard.html"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Custom Search Redirect",
      "keyword": "@customsearch",
      "search_url": "https://www.startpage.com/do/search?q={searchTerms}",
      "suggest_url": "https://www.google.com/complete/search?client=firefox&q={searchTerms}",
      "favicon_url": "icons/icon32.png",
      "is_default": true
    }
  }
}
